[user]
    name = Anatoly Nikiforov [remote]
    email = Anatoly.Nikiforov@infowatch.com
[core]
	whitespace = trailing-space,space-before-tab
	autocrlf = input
[apply]
    whitespace = fix
[log]
    date = iso
[color]
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    st = status -uno
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log -p
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files

[branch]
	autosetuprebase = remote
